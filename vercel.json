{
  "builds": [
    {
      "src": "backend/src/main.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.9" },
      "installCommand": "apt-get update && apt-get install -y ffmpeg && pip install -r backend/requirements.txt"
    },
    {
      "src": "backend/src/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend/src/static/index.html"
    }
  ]
}
