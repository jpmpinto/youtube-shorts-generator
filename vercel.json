{
  "builds": [
    {
      "src": "backend/src/main.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.9" } // Ou "python3.10", "python3.11" se souber a vers√£o exata
    },
    {
      "src": "backend/src/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend/src/static/index.html"
    }
  ]
}
